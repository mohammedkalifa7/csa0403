#include <stdio.h>
#include <unistd.h>

int main() {
    int fd[2];
    char msg[] = "Hello from Parent";
    char buffer[100];

    pipe(fd);

    if (fork() == 0) {
        read(fd[0], buffer, sizeof(buffer));
        printf("Child received: %s\n", buffer);
    } else {
        write(fd[1], msg, sizeof(msg));
    }
    return 0;
}
