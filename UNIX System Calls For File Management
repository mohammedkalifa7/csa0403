#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>

int main() {
    int fd;
    char wbuf[] = "UNIX File Management Program";
    char rbuf[100];

    fd = open("file.txt", O_CREAT | O_RDWR | O_TRUNC, 0644);
    if (fd == -1) {
        perror("File open error");
        return 1;
    }

    write(fd, wbuf, strlen(wbuf));
    lseek(fd, 0, SEEK_SET);
    read(fd, rbuf, sizeof(rbuf));

    printf("Data read from file: %s\n", rbuf);

    close(fd);
    return 0;
}

