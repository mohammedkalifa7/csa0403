#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>
#include <string.h>

int main() {
    int fd;
    struct stat st;
    DIR *dp;
    struct dirent *entry;
    char data[] = "UNIX File Management Program"; // 29 bytes

    /* Create file with known content */
    fd = open("file.txt", O_CREAT | O_WRONLY | O_TRUNC, 0644);
    write(fd, data, strlen(data));
    close(fd);

    /* Open file for reading */
    fd = open("file.txt", O_RDONLY);
    if (fd == -1) {
        perror("File open error");
        return 1;
    }

    /* fcntl */
    printf("File descriptor flags: %d\n", fcntl(fd, F_GETFL));

    /* lseek */
    printf("File pointer position: %ld\n", lseek(fd, 0, SEEK_CUR));

    /* stat */
    stat("file.txt", &st);
    printf("File size: %ld bytes\n", st.st_size);

    /* Directory listing */
    dp = opendir(".");
    if (dp == NULL) {
        perror("Directory open error");
        return 1;
    }

    printf("Directory contents:\n");
    while ((entry = readdir(dp)) != NULL) {
        printf("%s\n", entry->d_name);
    }

    closedir(dp);
    close(fd);
    return 0;
}


