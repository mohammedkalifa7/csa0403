#include <stdio.h>
#include <string.h>

int main() {
    FILE *fp;
    char filename[50], pattern[50], line[200];

    printf("Enter filename: ");
    scanf("%s", filename);

    printf("Enter search pattern: ");
    scanf("%s", pattern);

    fp = fopen(filename, "r");
    if (fp == NULL) {
        perror("File open error");
        return 1;
    }

    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, pattern)) {
            printf("%s", line);
        }
    }

    fclose(fp);
    return 0;
}
