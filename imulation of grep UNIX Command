#include <stdio.h>
#include <string.h>

int main() {
    FILE *fp;
    char line[200], pattern[50];

    printf("Enter search pattern: ");
    scanf("%s", pattern);

    fp = fopen("file.txt", "r");
    if (fp == NULL) {
        perror("File not found");
        return 1;
    }

    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, pattern)) {
            printf("%s", line);
        }
    }

    fclose(fp);
    return 0;
}
