#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>
#include <unistd.h>

sem_t fork1, fork2;

void* philosopher(void* num) {
    int id = *(int*)num;

    printf("Philosopher %d is thinking\n", id);
    sem_wait(&fork1);
    sem_wait(&fork2);

    printf("Philosopher %d is eating\n", id);
    sleep(1);

    sem_post(&fork2);
    sem_post(&fork1);

    return NULL;
}

int main() {
    pthread_t t1, t2;
    int a = 1, b = 2;

    sem_init(&fork1, 0, 1);
    sem_init(&fork2, 0, 1);

    pthread_create(&t1, NULL, philosopher, &a);
    pthread_create(&t2, NULL, philosopher, &b);

    pthread_join(t1, NULL);
    pthread_join(t2, NULL);

    return 0;
}
