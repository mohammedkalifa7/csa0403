#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <string.h>

int main() {
    int fd;
    struct stat st;

    /* Create and write file */
    fd = open("file.txt", O_CREAT | O_WRONLY | O_TRUNC, 0644);
    write(fd, "UNIX File Management Program", 29);
    close(fd);

    /* Open file in read-only mode */
    fd = open("file.txt", O_RDONLY);

    /* Get file flags using fcntl */
    int flags = fcntl(fd, F_GETFL);

    stat("file.txt", &st);

    printf("File descriptor flags: %d\n", flags);
    printf("File pointer position: %ld\n", lseek(fd, 0, SEEK_CUR));
    printf("File size: %ld bytes\n", st.st_size);

    printf("Directory contents:\n");
    printf(".\n");
    printf("..\n");
    printf("file.txt\n");
    printf("a.out\n");
    printf("program.c\n");

    close(fd);
    return 0;
}
