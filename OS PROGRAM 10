#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>
#include <unistd.h>

sem_t empty, full;
int buffer;

void* producer() {
    sem_wait(&empty);
    buffer = 10;
    printf("Producer produced item\n");
    sem_post(&full);
}

void* consumer() {
    sem_wait(&full);
    printf("Consumer consumed item %d\n", buffer);
    sem_post(&empty);
}

int main() {
    pthread_t p, c;

    sem_init(&empty, 0, 1);
    sem_init(&full, 0, 0);

    pthread_create(&p, NULL, producer, NULL);
    pthread_create(&c, NULL, consumer, NULL);

    pthread_join(p, NULL);
    pthread_join(c, NULL);

    return 0;
}
