#include <stdio.h>
#include <sys/stat.h>

int main() {
    struct stat st;

    if (stat("file.txt", &st) == -1) {
        perror("Stat error");
        return 1;
    }

    printf("File Access Permissions:\n");

    if (st.st_mode & S_IRUSR) printf("Owner: Read\n");
    if (st.st_mode & S_IWUSR) printf("Owner: Write\n");
    if (st.st_mode & S_IXUSR) printf("Owner: Execute\n");

    if (st.st_mode & S_IRGRP) printf("Group: Read\n");
    if (st.st_mode & S_IROTH) printf("Others: Read\n");

    return 0;
}
